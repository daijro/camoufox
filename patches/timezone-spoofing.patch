+void nsGlobalWindowInner::SetTimezone(const nsAString& timezone, ErrorResult& aRv) {
+  uint32_t userContextId = 0;
+
+  if (Document* doc = GetDoc()) {
+    if (nsIPrincipal* p = doc->NodePrincipal()) {
+      userContextId = p->OriginAttributesRef().mUserContextId;
+    }
+  }
+
+  // Fallback to DocShell if principal returned 0
+  if (userContextId == 0) {
+    if (nsIDocShell* ds = GetDocShell()) {
+      auto* concrete = static_cast<nsDocShell*>(ds);
+      uint32_t dsId = concrete->GetOriginAttributes().mUserContextId;
+      if (dsId != 0) userContextId = dsId;
+    }
+  }
+  // Note: userContextId == 0 is valid for default context
+
+  NS_LossyConvertUTF16toASCII timezoneASCII(timezone);
+
+  if (JSContext* cx = nsContentUtils::GetCurrentJSContext()) {
+    if (!JS::SetRealmTimeZoneOverride(cx, timezoneASCII.get())) {
+      aRv.ThrowTypeError("Invalid timezone identifier");
+      return;
+    }
+  }
+
+  TimezoneManager::SetTimezone(userContextId, timezone);
+}
