+/* Camoufox: Per-context font list manager */
+#include "FontListManager.h"
+
+#include "mozilla/Mutex.h"
+#include "mozilla/dom/BrowsingContext.h"
+#include "nsGlobalWindowInner.h"
+#include "xpcpublic.h"
+
+namespace mozilla {
+namespace dom {
+
+static Mutex sFontListMutex("FontListManager");
+static nsTHashMap<nsUint32HashKey, nsTHashSet<nsCString>> sFontLists;
+static thread_local uint32_t sCurrentContextId = 0;
+
+nsString FontListManager::DisabledKeyForUserContext(uint32_t aId) {
+  nsAutoString key;
+  key.AppendPrintf("fontlist_d_%u", aId);
+  return key;
+}
+
+void FontListManager::SetFontList(uint32_t aId, const nsAString& aFontList) {
+  nsTHashSet<nsCString> fontSet;
+  nsAutoString remaining(aFontList);
+  while (!remaining.IsEmpty()) {
+    int32_t commaPos = remaining.FindChar(',');
+    nsAutoString fontName;
+    if (commaPos >= 0) {
+      fontName = Substring(remaining, 0, commaPos);
+      remaining.Cut(0, commaPos + 1);
+    } else {
+      fontName = remaining;
+      remaining.Truncate();
+    }
+    fontName.Trim(" \t");
+    if (fontName.IsEmpty()) continue;
+    nsAutoCString utf8;
+    CopyUTF16toUTF8(fontName, utf8);
+    ToLowerCase(utf8);
+    fontSet.Insert(utf8);
+  }
+  MutexAutoLock lock(sFontListMutex);
+  sFontLists.InsertOrUpdate(aId, std::move(fontSet));
+}
+
+bool FontListManager::HasFontList(uint32_t aId) {
+  MutexAutoLock lock(sFontListMutex);
+  return sFontLists.Contains(aId);
+}
+
+bool FontListManager::IsFontAllowed(uint32_t aId,
+                                     const nsACString& aFontName) {
+  MutexAutoLock lock(sFontListMutex);
+  auto entry = sFontLists.Lookup(aId);
+  if (!entry) return true;
+  return entry.Data().Contains(aFontName);
+}
+
+void FontListManager::SetCurrentContext(uint32_t aId) {
+  sCurrentContextId = aId;
+}
+
+uint32_t FontListManager::GetCurrentContext() {
+  return sCurrentContextId;
+}
+
+void FontListManager::DisableFunction(uint32_t aId) {
+  RoverfoxStorageManager::PutBool(DisabledKeyForUserContext(aId), true);
+}
+
+bool FontListManager::IsFunctionEnabledForWebIDL(JSContext* aCx,
+                                                  JSObject* aObj) {
+  nsGlobalWindowInner* win = xpc::WindowOrNull(aObj);
+  if (!win) return false;
+  uint32_t id = 0;
+  if (BrowsingContext* bc = win->GetBrowsingContext()) {
+    id = bc->OriginAttributesRef().mUserContextId;
+  }
+  bool disabled = false;
+  RoverfoxStorageManager::GetBool(DisabledKeyForUserContext(id), disabled);
+  return !disabled;
+}
+
+}  // namespace dom
+}  // namespace mozilla
