+class FontListManager {
+ public:
+  static void SetFontList(uint32_t aUserContextId, const nsAString& aFontList);
+  static bool HasFontList(uint32_t aUserContextId);
+  static bool IsFontAllowed(uint32_t aUserContextId,
+                             const nsACString& aFontName);
+  static void SetCurrentContext(uint32_t aUserContextId);
+  static uint32_t GetCurrentContext();
+  static void DisableFunction(uint32_t aId);
+  static bool IsFunctionEnabledForWebIDL(JSContext* aCx, JSObject* aObj);
+ private:
+  static nsString DisabledKeyForUserContext(uint32_t aId);
+};
+
+// RAII guard for setting/clearing the thread-local context
+class MOZ_RAII AutoFontListContext {
+ public:
+  explicit AutoFontListContext(uint32_t aId)
+      : mOldId(FontListManager::GetCurrentContext()) {
+    FontListManager::SetCurrentContext(aId);
+  }
+  ~AutoFontListContext() {
+    FontListManager::SetCurrentContext(mOldId);
+  }
+ private:
+  uint32_t mOldId;
+};
+
+}  // namespace dom
